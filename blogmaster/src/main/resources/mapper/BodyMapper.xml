<mapper namespace="com.example.blogmaster.mapper.BodyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.blogmaster.pojo.Body">
        <id column="id" property="id" />
        <result column="article_id" property="article_id" />
        <result column="content" property="content" />
